{
  "name": "mark",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=7.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "noHoist": [
      "**/@nestjs/platform-express"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "build:docker": "docker buildx build -f ./apps/api-gateway/Dockerfile -t mark-api-gateway --no-cache --platform linux/amd64 . &> build-gateway.log && docker buildx build -f ./apps/web/Dockerfile -t mark-web --no-cache --platform linux/amd64 . &> build-web.log && docker buildx build -f ./apps/api/Dockerfile -t mark-api --no-cache --platform linux/amd64 . &> build-api.log",
    "db": "scripts/start-db.sh",
    "seed": "source dev.env && docker cp seed.sql mark-postgres:/tmp/seed.sql && docker exec -i mark-postgres pg_restore --username=$POSTGRES_USER --dbname=$POSTGRES_DB --no-owner --no-acl --clean --if-exists --no-password /tmp/seed.sql",
    "dev": "dotenv -e dev.env -- turbo run dev --parallel",
    "format": "prettier --ignore-unknown --write .",
    "format:staged": "prettier --ignore-unknown --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,html}\"",
    "lint": "turbo run lint -- --fix",
    "lint:staged": "turbo run lint:staged --",
    "prepare": "husky install",
    "prisma:generate": "cd ./apps/api && source dev.env && prisma generate",
    "prisma:migrate": "cd ./apps/api && source dev.env && prisma migrate dev",
    "prisma:studio": "cd ./apps/api && source dev.env && prisma studio",
    "prisma:reset": "cd ./apps/api && source dev.env && prisma migrate reset --force",
    "prisma:db-push": "cd ./apps/api && source dev.env && prisma db push",
    "prisma:db-pull": "cd ./apps/api && source dev.env && prisma db pull",
    "secrets:audit": "detect-secrets audit .secrets.baseline",
    "secrets:check": "scripts/detect-secrets.sh",
    "secrets:check:staged": "scripts/detect-secrets-staged.sh",
    "secrets:setup": "detect-secrets scan --update .secrets.baseline",
    "seed:update": "turbo run seed:update --filter=api",
    "setup": "[ -d \"$(git rev-parse --show-toplevel)/apps/api\" ] && cd \"$(git rev-parse --show-toplevel)/apps/api\" && dotenv -e ./dev.env -- npx prisma migrate dev && npx prisma generate; cd $(git rev-parse --show-toplevel)",
    "setup:no-git": "cd ./apps/api && dotenv -e ./dev.env -- npx prisma migrate dev && npx prisma generate; cd ../../",
    "test": "turbo run test",
    "test:watch": "turbo run test --parallel ",
    "test:staged": "turbo run test:staged --",
    "start": "set -e && yarn db && yarn setup && yarn seed && yarn dev",
    "studio": "cd ./apps/api && dotenv -e ./dev.env -- npx prisma studio",
    "translation-audit:dev": "cd ./apps/api && dotenv -e ./dev.env -- ts-node src/scripts/translation-audit.ts"
  },
  "dependencies": {
    "@cypress/request": "3.0.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@mozilla/readability": "^0.6.0",
    "@nestjs/common": "10.4.17",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "10.4.17",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.4.9",
    "@nestjs/swagger": "^7.0.1",
    "@nestjs/terminus": "^10.0.0",
    "@octokit/rest": "^21.0.2",
    "@smastrom/react-rating": "^1.5.0",
    "@tabler/icons-react": "^3.16.0",
    "@tsparticles/engine": "^3.5.0",
    "@tsparticles/react": "^3.0.0",
    "@types/natural": "^6.0.1",
    "@types/papaparse": "^5.3.15",
    "@types/pdf-parse": "^1.1.4",
    "axios": "^1.12.0",
    "cookie": "^0.7.0",
    "express": "^4.19.2",
    "framer-motion": "^11.8.0",
    "jsondiffpatch": "^0.7.2",
    "lottie-react": "^2.4.0",
    "mammoth": "^1.8.0",
    "marked": "^4.0.10",
    "natural": "^8.1.0",
    "next": "^14.2.32",
    "node-fetch": "^2.6.7",
    "nodemailer": "^7.0.7",
    "papaparse": "^5.4.1",
    "pdfjs-dist": "^4.7.76",
    "prismjs": "1.30.0",
    "puppeteer": "^23.9.0",
    "react": "^19.0.0",
    "react-circular-progressbar": "^2.1.0",
    "react-confetti": "^6.1.0",
    "react-dom": "^19.0.0",
    "react-draggable": "^4.5.0",
    "react-dropzone": "^14.2.9",
    "react-pdftotext": "^1.3.3",
    "react-select": "^5.8.2",
    "react-use": "^17.5.1",
    "rehype-highlight": "^7.0.0",
    "remark": "^15.0.1",
    "tailwind-scrollbar-hide": "^2.0.0",
    "tar-fs": "^3.1.1",
    "tmp": "^0.2.4",
    "tsparticles": "^3.5.0",
    "undici": "6.21.2",
    "zod": "^3.23.5"
  },
  "devDependencies": {
    "detect-secrets": "^1.0.6",
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-sh": "^0.17.4",
    "turbo": "^2.0.3"
  },
  "resolutions": {
    "**/express": "^4.19.2",
    "**/body-parser": "^1.20.3",
    "tmp": "^0.2.4",
    "tar-fs": "^3.1.1",
    "jsondiffpatch": "^0.7.2",
    "prismjs": "^1.30.0",
    "node-fetch": "^2.6.7",
    "tough-cookie": "^4.1.3",
    "multer": "2.0.2",
    "**/request": "2.88.2",
    "form-data": "4.0.4",
    "**/cheerio": "1.0.0",
    "**/reflect-metadata": "0.2.0",
    "**/rxjs": "7.8.1",
    "**/class-transformer": "0.5.1",
    "**/class-validator": "0.14.0",
    "**/@prisma/client": "5.3.1",
    "**/prisma": "5.3.1",
    "langchain": "~0.3.34",
    "**/@langchain/core": "~0.3.77",
    "**/@langchain/community": "~0.3.56",
    "**/@langchain/openai": "~0.6.13",
    "@ibm-cloud/watsonx-ai": "~1.6.0"
  },
  "turbo": {
    "pipeline": {
      "download-models": {
        "dependsOn": []
      },
      "dev": {
        "dependsOn": [
          "^download-models"
        ]
      },
      "build": {
        "dependsOn": [
          "^download-models"
        ]
      }
    }
  }
}
